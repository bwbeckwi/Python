from math import sqrt,ceil,floor

f_name = "Brad"
l_name = "Beckwith"
my_age = 61

print("Hello " + f_name + " " + l_name + "!")
print("You are " + str(my_age) + " years old.")

print(pow(2,2))
print(pow(2,4))
print(pow(2,8))
print(pow(2,10))
print(pow(2,12))
print(pow(2,14))
print(pow(2,16))
print(pow(2,24))
print(max(2,24))
print(min(2,24))
print(round(3.14159))
print(floor(3.8))
print(ceil(3.8))
print(sqrt(38))


i = 1
while i <= 10:
    print(i)
    i += 1

print("Done with loop")
